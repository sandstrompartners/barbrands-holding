---
import "../style/demo-styling.css";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
const { metaDescription } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={metaDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=PT+Sans+Narrow:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <script
      defer
      data-domain="barbrands.com"
      src="https://plausible.io/js/script.js"></script>
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  :root {
    --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
    --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
    --font-size-xl: clamp(2.44rem, 2.38vw + 6.85rem, 8.75rem);
    --color-text: #ffe174;
    /* --color-bg: hsl(10, 21%, 95%); */
  }
  html {
    font-family: "PT Sans Narrow", system-ui, sans-serif;
    font-size: var(--font-size-base);
    color: var(--color-text);
    background-color: var(--color-bg);
  }
  body {
    margin: 0;
  }
  :global(h1) {
    font-size: var(--font-size-xl);
  }
  :global(h2) {
    font-size: var(--font-size-lg);
  }
  :global(code) {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
